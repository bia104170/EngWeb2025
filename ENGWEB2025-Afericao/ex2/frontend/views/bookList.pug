extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-light-blue
            h1 Lista de livros  

        .w3-container
            table.w3-table-all 
                tr
                    th ID 
                    th Título 
                    th Autor
                    th Data de publicação
                    th Páginas
                each book in lista 
                    tr
                        td
                            a(href="/" + book._id)=book._id
                        td= book.title 
                        td
                            a(href="/entidades/" + book.author_id)=book.author
                        td= book.publishDate
                        td= book.pages 
                        
