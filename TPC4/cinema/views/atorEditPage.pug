extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h2 Film Form

        form.w3-container(method="POST")
        
            fieldset
                legend Metadata
                label Título
                input.w3-input.w3-round(type="text", name="id", value=filme.id)
                label Ano
                input.w3-input.w3-round(type="text", name="year", value=filme.year)  

            fieldset
                legend Elenco
                each ator in filme.cast
                    label Ator
                    input.w3-input.w3-round(type="text", name="cast", value=ator)

            fieldset 
                legend Géneros
                each genero in filme.genres
                    label Género
                    input.w3-input.w3-round(type="text", name="genres", value=genero)

            button.w3-button.w3-teal(type="submit") Submit