extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-blue-grey
            a.w3-button.w3-circle.w3-xlarge.w3-light-gray.w3-margin-top(href="/" title="Voltar")
                i.fa.fa-arrow-left.w3-text-blue-grey
            
            .w3-margin-left
                h2 Visualizar Contrato
                h4 Contrato: #{contrato._id}

        .w3-container
             ul.w3-ul.w3-card-4
                li
                    b ID: 
                    | #{contrato._id}
                li 
                    b Número anúncio: 
                    | #{contrato.nAnuncio}
                li    
                    b Tipo procedimento: 
                    | #{contrato.tipoprocedimento}
                li
                    b Objeto contrato: 
                    | #{contrato.objectoContrato}
                li 
                    b Data publicação: 
                    | #{contrato.dataPublicacao}
                li
                    b Data celebração: 
                    | #{contrato.dataCelebracaoContrato}
                li
                    b Preço contratual: 
                    | #{contrato.precoContratual}
                li
                    b Prazo execução: 
                    | #{contrato.prazoExecucao}
                li
                    b NIPC: 
                    | #{contrato.NIPC_entidade_comunicante}
                li
                    b Entidade comunicante: 
                    | #{contrato.entidade_comunicante}
                li
                    b Fundamentação: 
                    | #{contrato.fundamentacao}
