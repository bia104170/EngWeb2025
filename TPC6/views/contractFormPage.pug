extends layout

block content
    w3-card-4
        header.w3-container.w3-blue-grey
            a.w3-button.w3-circle.w3-xlarge.w3-light-gray.w3-margin-top(href="/" title="Voltar")
                i.fa.fa-arrow-left.w3-text-blue-grey
                
            .w3-margin-left    
                h2 Registar contrato

        form.w3-container(method="POST")
                    fieldset
                        legend Metadata
                        label ID
                        input.w3-input.w3-round(type="text" name="_id" required)
                        label Número anúncio
                        input.w3-input.w3-round(type="text" name="nAnuncio" required)
                        label Tipo procedimento
                        input.w3-input.w3-round(type="text" name="tipoprocedimento" required)
                        label Objeto contrato
                        input.w3-input.w3-round(type="text" name="objectoContrato" required)
                        label Data publicação
                        input.w3-input.w3-round(type="text" name="dataPublicacao" required)
                        label Data celebração contrato
                        input.w3-input.w3-round(type="text" name="dataCelebracaoContrato" required)
                        label Preço contratual
                        input.w3-input.w3-round(type="text" name="precoContratual" required)
                        label Prazo execução
                        input.w3-input.w3-round(type="text" name="prazoExecucao" required)
                        label NIPC
                        input.w3-input.w3-round(type="text" name="NIPC_entidade_comunicante" required)
                        label Entidade comunicante
                        input.w3-input.w3-round(type="text" name="entidade_comunicante" required)
                        label Fundamentação
                        input.w3-input.w3-round(type="text" name="fundamentacao" required)
                
                    br
                    span 
                        button.w3-btn.w3-amber.w3-mb-2.w3-round.w3-margin-top.w3-margin-bottom(type="submit" style="width:100px") Registar
                    span            
                        a(href='/' class="w3-button w3-light-grey w3-round w3-margin-top w3-margin-bottom" style="width:100px") Voltar
                    span