extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-blue-grey
            a.w3-button.w3-circle.w3-xlarge.w3-light-gray.w3-margin-top(href="/" title="Voltar")
                i.fa.fa-arrow-left.w3-text-blue-grey
            
            .w3-margin-left
                h2 Lista de Entidades


        .w3-container
            table.w3-table-all 
                tr
                    th ID 
                    th Nome
                    th Valor dos contratos
                each entidade in lista 
                    tr 
                        td
                            a(href="/entidades/" + entidade.nipc)= entidade.nipc
                        td= entidade.nome 
                        td= entidade.valor