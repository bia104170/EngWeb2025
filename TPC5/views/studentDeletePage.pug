extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Remover aluno

        p Tem certeza que pretende eliminar o aluno: #{aluno._id}?

        form(method='POST')
            span 
                button.w3-btn.w3-teal.w3-mb-2.w3-round.w3-margin-top.w3-margin-bottom(type="submit") Confirmar
            span            
                a(href='/alunos' class="w3-button w3-light-grey w3-round w3-margin-top w3-margin-bottom" style="width:100px") Cancelar
            span